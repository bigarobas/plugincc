<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0" ExtensionBundleId="com.bigarobas.plugincc.template" ExtensionBundleVersion="1.0.0"
		ExtensionBundleName="Plugin CC Template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="com.bigarobas.plugincc.template" Version="1.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
            <!-- Uncomment tags according to the apps you want your panel to support -->
            
            <!-- Photoshop -->
            <Host Name="PHXS" Version="15.0" />
            <Host Name="PHSP" Version="15.0" />
            
            <!-- Illustrator -->
            <Host Name="ILST" Version="18.0" />
            
            <!-- InDesign -->
            <Host Name="IDSN" Version="10.0" />
            
             <!-- InCopy -->
            <Host Name="AICY" Version="10.0" />
            
            <!-- Premiere -->
            <Host Name="PPRO" Version="8.0" />
            
            <!-- AfterEffects -->
            <Host Name="AEFT" Version="13.0" />
            
            <!-- PRELUDE -->            
            <Host Name="PRLD" Version="3.0" />
            
            <!-- Animate -->
            <Host Name="FLPR" Version="14.0" />
            
            <!-- Audition -->
            <Host Name="AUDT" Version="8.0" />
            
            <!-- Dreamweaver -->
            <Host Name="DRWV" Version="16.0" />

		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="7.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="com.bigarobas.plugincc.template">
			<DispatchInfo >
				<Resources>
				<MainPath>./PLUGIN/html/index.html</MainPath>
				<CEFCommandLine>
                    <Parameter>--enable-nodejs</Parameter>
					<Parameter>--mixed-context</Parameter>
                </CEFCommandLine>
				<ScriptPath>./CORE/jsx/core.jsx</ScriptPath>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>Plugin CC Template</Menu>
					<Geometry>
						<Size>
							<Height>300</Height>
							<Width>300</Width>
						</Size>
                    <!--<MinSize>
                            <Height>550</Height>
                            <Width>400</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>550</Height>
                            <Width>400</Width>
                        </MaxSize>-->
                        
					</Geometry>
					<Icons>
						<Icon Type="Normal">./PLUGIN/assets/icons/iconNormal.png</Icon>
						<Icon Type="RollOver">./PLUGIN/assets/icons/iconRollover.png</Icon>
						<Icon Type="Disabled">./PLUGIN/assets/icons/iconDisabled.png</Icon>
						<Icon Type="DarkNormal">./PLUGIN/assets/icons/iconDarkNormal.png</Icon>
						<Icon Type="DarkRollOver">./PLUGINs/assets/icons/iconDarkRollover.png</Icon>
					</Icons>					
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
